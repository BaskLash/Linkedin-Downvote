{
  "manifest_version": 3,
  "name": "LinkedIn Dislike",
  "version": "1.0.1",
  "description": "Allows dislikes on LinkedIn posts.",
  "permissions": ["scripting", "storage"],
  "background": {
  "service_worker": "background.js"
},
"action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
  "*://www.linkedin.com/*",
  "http://localhost:8080/*",
  "http://127.0.0.1:8080/*",
  "https://linkedin.prompt-in.com/*"
],
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/*"],
      "js": ["content.js"]
    }
  ]
}
